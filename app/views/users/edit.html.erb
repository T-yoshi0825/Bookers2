<div class="container">
  <div class="row">
    <h1>User info</h1>
      <% if @user.errors.any? %>
        <div class="alert alert-warning">
          <%= @user.errors.count %>errors prohibited this obj flom being save:<br>
          <% @user.errors.full_messages.each do |massage| %>
          <%= massage %>
          <% end %>
        </div>
      <% end %>

       <div class="form-body">
         <%= form_for(@user) do |f| %>
           <h4>Name</h4>
           <%= f.text_field :name %>
           <h4>Image</h4>
           <%= f.attachment_field :profile_image, class: "user-edit-form" %>
           <h4>Introduction</h4><%= f.text_field :introduction %><br>
           <%= f.submit "Update User", class: "btn btn-danger" %>
         <% end %>
       </div>
  </div>
</div>